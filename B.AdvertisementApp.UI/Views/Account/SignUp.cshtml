@model UserCreateModel
@{
    Layout = "_Layout";
}

<div class="mt-4">
    <form asp-action="SignUp" asp-controller="Account" method="post" class="p-4 w-75 mx-auto">
        <div class="mb-3">
            <select class="form-select" asp-items="@Model.Genders" asp-for="GenderId" >
                <option value="0">Bir Cinsiyet Seniçinz</option>
            </select>
        </div>
        <div class="mb-3">
            <label>Adınız:</label>
            <input asp-for=FirstName class="form-control" />
        </div>
        <div class="mb-3">
            <label>Soyadınız:</label>
            <input asp-for=LastName class="form-control" />
        </div>
        <div class="mb-3">
            <label>Kullanıcı Adınız:</label>
            <input asp-for=UserName class="form-control" />
        </div>
        <div class="mb-3">
            <label>Telefon Numaranız:</label>
            <input asp-for=PhoneNumber class="form-control" />
        </div>
        <div class="mb-3">
            <label>Şifreniz:</label>
            <input type="password" asp-for=Password class="form-control" />
        </div>
        <div class="mb-3">
            <label>Şifre Tekrarı:</label>
            <input type="password" asp-for=ConfirmPassword class="form-control" />
        </div>
        <div class="mb-3 text-end">
            <button type="submit" class="btn btn-primary">Kayıt Ol</button>
        </div>
        <div class="text-danger" asp-validation-summary=All>

        </div>
    </form>
</div>