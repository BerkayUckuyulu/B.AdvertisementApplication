@model List<AdvertisementListDto>
@{
    Layout = "_Layout";
}



<div class=container-flued>
    @{
        if (Model?.Count > 0)
        {
            <div class="text-end my-3 p-1">
                <a asp-action="Create" asp-controller="Application">Yeni İlan Oluştur</a>


            </div>


            <table class="table table-sm table-hover table-striped mt-3">
                <thead>
                    <tr>
                        <th>Başlık</th>
                        <th>Açıklama</th>
                        <th>Yayınlanma Tarihi</th>
                        <th>İlan Durumu</th>


                    </tr>
                </thead>

                <tbody>
                    @foreach (var advertisement in Model)
                    {
                        <tr>
                            <td>@advertisement.Title</td>
                            <td>@Html.Raw(advertisement.Description)</td>
                            <td>@advertisement.CreatedDate.ToString("dddd,dd,MMMM,yyyy")</td>
                            <td>@(advertisement.Status==true ? "Aktif" : "Pasif") </td>

                            <td>
                                <a asp-action="Update" asp-controller="Application" asp-route-id=@advertisement.Id> Güncelle</a>
                                <a asp-action="Remove" asp-controller="Application" asp-route-id=@advertisement.Id> Sil</a>

                            </td>

                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="mt-3 text-center lead">
                <a asp-action="Create" asp-controller="Application">Yeni İlan Oluştur</a>


                Herhangi bir başvuru bulunmamaktadır.
            </div>
        }

    }
</div>